# frozen_string_literal: true

default_platform(:ios)

platform :ios do
  desc 'Build and run unit tests'
  lane :unit_tests  do
    swiftlint(strict: true)
    begin
      scan(
        scheme: 'Tenta-iOS',
        clean: true,
        devices: ['iPhone 7'],
        output_types: 'junit'
      )

      github_check(
        status: :pending,
        slab: 'niilohlin/Tenta',
        description: 'Waiting for test result',
        context: 'xcov'
      )
      json = get_coverage(
        project: 'Tenta.xcodeproj',
        scheme: 'Tenta-iOS',
        output_directory: 'fastlane/test_output/xcov_output',
        html_report: false,
        json_report: true
      )
      github_check(
        status: :success,
        slab: 'niilohlin/Tenta',
        description: "Success #{(100 * json['coverage']).round(2)}% coverage",
        context: 'xcov'
      )
    rescue
      github_check(
        status: :failure,
        slab: 'niilohlin/Tenta',
        description: 'Failure',
        context: 'xcov'
      )
    end
  end
end
